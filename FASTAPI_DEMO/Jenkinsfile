pipeline {
  agent {
    kubernetes {
      defaultContainer 'kaniko'
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:v1.17.0
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
    - name: workspace
      mountPath: /workspace
  volumes:
  - name: kaniko-secret
    secret:
      secretName: docker-cred
  - name: workspace
    emptyDir: {}
"""
    }
  }

  environment {
    IMAGE = "skundu1234/jenkins"
    TAG = "${env.BUILD_NUMBER}"
  }

  stages {
    stage('Build & Push') {
      steps {
        container('kaniko') {
          sh '''
            cp -r . /workspace
            /kaniko/executor \
              --dockerfile=/workspace/Dockerfile \
              --context=dir:///workspace \
              --destination=${IMAGE}:${TAG} \
              --verbosity=info
          '''
        }
      }
    }
  }

  post {
    success {
      echo "✅ Docker image ${IMAGE}:${TAG} built and pushed successfully!"
    }
    failure {
      echo "❌ Kaniko build failed. Time to troubleshoot."
    }
  }
}
