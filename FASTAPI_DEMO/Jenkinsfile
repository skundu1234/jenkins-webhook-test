pipeline {
  agent {
    kubernetes {
      label 'kaniko-agent'
      defaultContainer 'kaniko'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: kaniko
spec:
  containers:
    - name: kaniko
      image: gcr.io/kaniko-project/executor:latest
      tty: true
      volumeMounts:
        - name: kaniko-secret
          mountPath: /kaniko/.docker
        - name: workspace
          mountPath: /workspace
  volumes:
    - name: kaniko-secret
      secret:
        secretName: docker-cred
    - name: workspace
      emptyDir: {}
"""
    }
  }

  environment {
    IMAGE_NAME = 'skundu1234/jenkins'
    IMAGE_TAG = "${env.BUILD_NUMBER}"
  }

  stages {
    stage('Build Docker Image') {
      steps {
        container('kaniko') {
          sh '''
            /kaniko/executor \
              --dockerfile=/workspace/Dockerfile \
              --context=dir:///workspace \
              --destination=${IMAGE_NAME}:${IMAGE_TAG} \
              --verbosity=info \
              --insecure \
              --skip-tls-verify
          '''
        }
      }
    }

    stage('Notify') {
      steps {
        echo "Image ${IMAGE_NAME}:${IMAGE_TAG} built successfully üéâ"
      }
    }
  }

  post {
    failure {
      echo '‚ùå Build failed.'
    }
    success {
      echo '‚úÖ Build completed.'
    }
  }
}
